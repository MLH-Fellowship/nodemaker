{
	"exclude": [ "output" ],
	"include": [
		"**/*.ts",
		"*.d.ts"
  ],
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "./build",
		"strict": true,
		"strictPropertyInitialization": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"plugins": [
			{ "transform": "typescript-is/lib/transform-inline/transformer" }
		]
	}
}
